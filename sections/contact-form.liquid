<div class="flex flex-col items-center my-8">
  {% form 'contact', product %}
     {% if form.errors %}
      <div class="border p-5">
          <div class="flex flex-col items-start w-full my-3">
              <div class="text-red-500">
                  {% render 'icon-failed' %}
                  <div class="text-sm font-medium ml-3">
                      Oh no! Your message was not posted
                  </div>
              </div>
              <ul class="px-4 mb-3 ml-7 list-decimal">
                  {% for error in form.errors %}
                      <li>
                          <span>
                              {{ form.errors.messages[error] }}
                          </span>
                      </li>
                  {% endfor %}
              </ul>
          </div>
      </div>
    {% elsif form.posted_successfully? %}
      <div class="flex flex-row items-center w-full my-3 p-5">
          <div class="text-green-500">
              {% render "icon-success" %}
          </div>
          <div class="text-sm font-medium ml-3">
              Message is posted successfully!
          </div>
      </div>
    {% endif %}
    <div class="max-w-6xl mx-auto justify-center flex-1 items-center px-4">
      <div class="flex px-1 mb-3">
        <div class="px-3 md:w-1/2">
          <label class="uppercase text-xs text-gray-500 font-medium" for="contact_name">Name</label>
          <input
            class="border border-gray-300 py-3 px-4 mb-3 text-gray-700 w-full"
            type="text"
            name="contact[name]"
            id="contact_name"
          >
        </div>
        <div class="px-3 md:w-1/2">
          <label class="uppercase text-xs text-gray-500 font-medium" for="contact_email">Email</label>
          <input
            class="border border-gray-300 py-3 px-4 mb-3 text-gray-700 w-full"
            type="email"
            name="contact[email]"
            id="contact_email"
          >
        </div>
      </div>
      <div class="flex px-1 mb-3">
        <div class="w-full px-3">
          <label class="uppercase text-xs text-gray-500 font-medium" for="contact_body">Message</label>
          <input
            class="border border-gray-300 py-3 px-4 mb-3 text-gray-700 w-full"
            type="text"
            name="contact[body]"
            id="contact_body"
          >
        </div>
  
        </div>
        <div class="flex px-1 mb-3">
          <div class="w-full px-3">
  
              <input class="bg-gray-700 py-2 px-3 w-full cursor-pointer hover:bg-gray-900 text-white" type="submit" value="Submit Message">
          </div>
        </div>
    </div>
  {% endform %}
</div>

{% schema %}
{
  "name": "Contact Form",
  "presets": [
    {
      "name": "Contact Form"
    }
  ],
  "settings": []
}
{% endschema %}
